{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://holomush.dev/schemas/plugin.schema.json",
  "properties": {
    "name": {
      "type": "string",
      "maxLength": 64,
      "minLength": 1,
      "pattern": "^[a-z](-?[a-z0-9])*$"
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "type": {
      "type": "string",
      "enum": [
        "lua",
        "binary"
      ]
    },
    "engine": {
      "type": "string",
      "description": "HoloMUSH version constraint (e.g. \u003e= 2.0.0)"
    },
    "dependencies": {
      "additionalProperties": {
        "type": "string"
      },
      "type": "object",
      "description": "Plugin dependencies with version constraints"
    },
    "events": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "capabilities": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "commands": {
      "items": {
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "capabilities": {
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          "help": {
            "type": "string"
          },
          "usage": {
            "type": "string"
          },
          "helpText": {
            "type": "string"
          },
          "helpFile": {
            "type": "string"
          }
        },
        "additionalProperties": false,
        "type": "object",
        "required": [
          "name"
        ]
      },
      "type": "array",
      "description": "Commands provided by this plugin"
    },
    "lua-plugin": {
      "properties": {
        "entry": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "entry"
      ]
    },
    "binary-plugin": {
      "properties": {
        "executable": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "executable"
      ]
    }
  },
  "additionalProperties": false,
  "type": "object",
  "required": [
    "name",
    "version",
    "type"
  ],
  "title": "HoloMUSH Plugin Manifest",
  "description": "Schema for plugin.yaml manifest files"
}
